                                                <DataTemplate>
                                                    <ui:TreeRowExpander Content="{Binding Column1}" />
                                                </DataTemplate>
                                            </ui:GridViewColumn.CellTemplate>
                                        </ui:GridViewColumn>
                                        <ui:GridViewColumn
                                            Width="250"
                                            DisplayMemberBinding="{Binding Column2, Mode=TwoWay}"
                                            Header="Column2" />
                                        <ui:GridViewColumn
                                            Width="250"
